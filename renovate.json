{
	"extends": ["config:base", "group:all"],
	"packageRules": [
		{
			"matchManagers": ["npm"],
			"matchFiles": ["package.json"],
			"groupName": "npm dependencies update",
			"enabled": true
		},
		{
			"matchManagers": ["gradle"],
			"matchFiles": ["build.gradle"],
			"groupName": "gradle dependencies update",
			"enabled": true
		}
	],
	"timezone": "Europe/Berlin",
	"schedule": ["on the 2nd and 4th day instance on sunday after 9pm"]
}
