  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "badge-maker": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0"
  },
  "lint-staged": {
    "*": "npm run format"
  }
