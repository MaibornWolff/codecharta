{
  "schema": "http://json-schema.org/draft-04/schema#",
  "title": "CodeCharta visualization data",
  "description": "data used for visualization",
  "type": "object",
  "required": ["projectName", "nodes", "apiVersion"],
  "properties": {
    "projectName": {
      "title": "project name",
      "type": "string"
    },
    "nodes": {
      "title": "list of nodes",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "apiVersion": {
      "title": "version of schema",
      "type": "string"
    },
    "edges": {
      "title": "edges between nodes",
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/edge"
      }
    },
    "attributeTypes": {
      "title": "list of nodes and edges attributeTypes",
      "$ref": "#/definitions/attributesType"
    }
  },
  "definitions": {
    "node": {
      "title": "nodes",
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "title": "name of node",
          "type": "string"
        },
        "type": {
          "title": "type of node",
          "type": "string"
        },
        "children": {
          "title": "children of node",
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/node"
          }
        },
        "attributes": {
          "title": "attributes of node",
          "$ref": "#/definitions/attributeList"
        }
      }
    },
    "edge": {
      "title": "edge between nodes",
      "type": "object",
      "required": ["fromNodeName", "toNodeName"],
      "properties": {
        "fromNodeName": {
          "title": "node where the edge comes from",
          "type": "string"
        },
        "toNodeName": {
          "title": "node where the edge goes to",
          "type": "string"
        },
        "attributes": {
          "title": "attributes of edges",
          "$ref": "#/definitions/attributeList"
        }
      }
    },
    "attributeList": {
      "title": "attributes",
      "description": "attributes, interpreted as map<string,object>",
      "type": "object",
      "patternProperties": {
        "^[A-Za-z0-9_]+$": {
          "type": "number"
        }
      }
    },
    "blacklist": {
      "title": "blacklist",
      "description": "blacklist of excluded nodes",
      "type": "array",
      "items": {
        "title": "blacklist items",
        "description": "blacklist type and minimatch paths",
        "type": "object",
        "patternProperties": {
          "^[A-Za-z0-9_]+$": {
            "type": "string"
          }
        }
      }
    },
    "attributesType": {
      "title": "attributesTypes",
      "type": "object",
      "properties": {
        "nodes": {
          "title": "attributeTypes",
          "description": "attributeTypes, interpreted as map<string,string>",
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "type": "string"
            }
          }
        },
        "edges": {
          "title": "attributeTypes",
          "description": "attributeTypes, interpreted as map<string,string>",
          "type": "object",
          "patternProperties": {
            "^[A-Za-z0-9_]+$": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
