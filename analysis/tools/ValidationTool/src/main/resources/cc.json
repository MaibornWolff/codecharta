{
  "schema": "http://json-schema.org/draft-04/schema#",
  "title": "CodeCharta visualization data",
  "description": "data used for visualization",
  "type": "object",
  "required":["projectName", "nodes", "apiVersion"],

  "properties": {
    "projectName": {
      "title": "project name",
      "type": "string"
    },
    "nodes": {
      "title": "list of nodes",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/node"
      }
    },
    "apiVersion": {
      "title": "version of schema",
      "type": "string"
    },
    "dependencies": {
      "title": "dependency types",
      "type": "object",
      "minItems": 0,
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "$ref": "#/definitions/dependency"
        }
      }

    }
  },

  "definitions": {
    "node":{
      "title": "nodes",
      "type": "object",
      "required":["name", "type"],
      "properties": {
        "name": {
          "title": "name of node",
          "type": "string"
        },
        "type": {
          "title": "type of node",
          "type": "string"
        },
        "children": {
          "title": "children of node",
          "type": "array",
          "minItems": 0,
          "items": {
            "$ref": "#/definitions/node"
          }
        },
        "attributes": {
          "title": "attributes of node",
          "$ref": "#/definitions/attributeList"
        }
      }
    },
    "dependency":{
      "title": "dependency types",
      "type": "object",
      "required":["node", "dependantNode"],
      "properties": {
        "node": {
          "title": "node1 path",
          "type": "string"
        },
        "nodeFilename": {
          "title": "node1 filename",
          "type": "string"
        },
        "dependantNode": {
          "title": "node2 path",
          "type": "string"
        },
        "dependantNodeFilename": {
          "title": "node2 filename",
          "type": "string"
        },
        "pairingRate": {
          "title": "pairingRate between 0 and 100",
          "type": "number"
        },
        "averageRevs": {
          "title": "average revisions",
          "type": "number"
        }
      }
    },
    "attributeList":{
      "title": "attributes",
      "description": "attributes, interpreted as map<string,object>",
      "type":"object",
      "patternProperties": {
        "^[A-Za-z0-9_]+$":{
          "type": "number"
        }
      }
    }
  }
}