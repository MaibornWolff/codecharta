<sourcemonitor_commands>
   <write_log>true</write_log>
   <command>
       <project_file>%PROJECT_FILE%</project_file>
       <project_language>%LANGUAGE%</project_language>
       <source_directory>%SOURCE_PATH%</source_directory>
       <include_subdirectories>true</include_subdirectories>
	   <show_measured_max_block_depth>True</show_measured_max_block_depth>
       <checkpoint_name>Baseline</checkpoint_name>
	   <parse_utf8_files>True</parse_utf8_files>
   </command>
   <command>
	   <project_file>%PROJECT_FILE%</project_file>
	   <checkpoint_name>Baseline</checkpoint_name>
	   <export>
		   <export_file>%OUT_FILE%</export_file>
		   <export_type>3 proj details</export_type>
		   <export_option>4 metrics totals</export_option>
		   <export_option>1</export_option>
		   <export_option>6</export_option>
	   </export>
   </command>
</sourcemonitor_commands>